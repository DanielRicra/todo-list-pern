{
  "compilerOptions": {
    "target": "ES2018",                                  /* Set the JavaScript language version for emitted JavaScript and include compatible library declarations. */

    /* Modules */
    "module": "commonJS",
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./dist", 
    "forceConsistentCasingInFileNames": true, 
    "esModuleInterop": true,
    /* Type Checking */
    "strict": true,
    "noImplicitReturns": true,
    /* Completeness */
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
}
